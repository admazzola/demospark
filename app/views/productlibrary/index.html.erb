
<h1>Product Library</h1>


  <div class="table-responsive">
    <table id="maintable" class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
    <th>ID</th>
    <th>Catalog Number</th>
     <th>Description</th>
     
      <th></th>
   		<th></th>
   		<th></th>
   		
    </tr>
  </thead>

  <tbody>
   <% Productlibrary.all.each do |item| %>
    
     <tr>
        	
  	
        	
        	
  	<td> <%= item.id %> </td>
    <td> <%= item.catalog_number %> </td>
    
    
    <td> <%= item.description %> </td>
   
<td>
        	<a href = "<%= url_for item %>">
        	<button type="button" class="btn btn-show">Show</button>
        	</a>        	
        </td>
        
        <td>
        	<a href = "<%= url_for edit_productlibrary_path(item) %>">
        	<button type="button" class="btn btn-edit">Edit</button>
        	</a>        	
        </td>
        
        <td>
        	<a href = "<%= url_for item  %>" data-confirm="Are you sure?" data-method="delete" rel="nofollow">
        	<button type="button" class="btn btn-destroy">Destroy</button>
        	</a>        	
        </td>
                         
  
    </tr>

    <% end %>
  </tbody>
</table>

</div>


<script>
	$(document).ready(function() {
    $('#maintable').dataTable();
} );

</script>
