 
 
 <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Add Part</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

<div class="row">
       <div class="col-lg-12">
<%= form_for :newpart, url: {controller: "partdetail",action: "create"}, html: {id: "newpartform"} do |f| %>






<div class="row">
	<div class="col-lg-3">
		
  
  <div class="form-group ">
    <%= f.label :barcode %><br>
    <%= f.text_field :barcode, class:"form-control" %>
   </div>
   
   
   
  </div>

 <div class="col-lg-3">
 	  <div class="form-group ">
    <%= f.label :catalognumber %><br>
    <%= f.text_field :catalognumber, class:"form-control" %>
   </div>
   <div class="form-group ">
    <%= f.label :series %><br>
    <%= f.text_field :series, class:"form-control" %>
   </div>
</div>
<div class="col-lg-6">
 <div class="form-group ">
    <%= f.label :description %><br>
    <%= f.text_area(:description,:rows => 5, :class=>"form-control") %>

   </div>
   </div>

 </div>
 


 
 
  <p>
  	<a href="javascript:submitform()"  id="submitbutton" class="btn btn-success savecall-button col-md-3 col-md-offset-3">Add part</a>

    <div id="errormessage" class= "btn btn-danger savecall-button col-md-3 col-md-offset-3" style="display:none"></div>
  </p>
<% end %>
</div>
</div>




<% content_for :head do %>
 <link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">
 
  <script>
  

  
  $(function() {
  	
  	
    
  	
  		//SET AVAILABLE AUTOCOMPLETES FOR Users
  	 var availableCompanyTags = [
      
<% User.all.each do |c| %>
"<%= c.name %>",
<% end %>     
    ];
    
       
    
    $( "#checkout_mcmccontact" ).autocomplete({
      source: availableCompanyTags
    });
  	
  	
    
    
    //DO ONEVENTS FOR CUSTOMER FIELD
    
    $( "#checkout_barcode" ).on( "keyup", function( event, ui ){
    	
        	$( "#addpart_button" ).addClass("disabled")
        	$("#part_description").html("");
  			$("#part_catalognumber").html("");
        	
        	if( $( "#checkout_barcode" ).val().length >= 4 )
        	{
        		barcode = $( "#checkout_barcode" ).val();
        		
        		
        		fillCodeData(barcode)
        		        		
        	}
        	
    	 
    }  );
    
 
    
    
  });
  
  
 
  function submitform()
  {
  	
  	errormessage = "";
  	
  	
  	
  	
  	
  	if(errormessage.length == 0)
  	{
  	$('#newpartform').submit();
  	}
  	else
  	{
  		
  		$('#submitbutton').hide();
  		$('#errormessage').show();
  		$('#errormessage').addClass('animated shake');
  		$('#errormessage').html(errormessage);
  		
  		
  		setTimeout(
  			function() 
  				{
  				  $('#errormessage').hide();
  					$('#submitbutton').show();
  					
  					$('#category_group').removeClass('has-error');
  					
  					
  					
 				 }, 1500);
  
  
  	}
  	
  }
  
    
    
  </script> 
  
<% end %>


