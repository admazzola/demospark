
<h1>Part Detail</h1>


  <div class="table-responsive">
    <table id="maintable" class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>ID</th>
   <th>Catalog Number</th>
    <th>Barcode</th>
     <th></th>
   		<th></th>
   		<th></th>
    </tr>
  </thead>

  <tbody>
   <% Partdetail.all.each do |item| %>
    
    <%
    
    product = Productlibrary.find(item.catalog_id )
    
    
    %>
    
    
     <tr>
        	
        	
        	
  	<td> <%= item.id %> </td>
  	
  	
    <td> 
    	<% if(product) %>
    <a href="<%= url_for product %>">	<%= product.catalog_number %> </a>
    	<% end %>
    	</td>
    
    
    
    
    <td> <%= item.barcode %> </td>
   
		<td>
        	<a href = "<%= url_for item %>">
        	<button type="button" class="btn btn-show">Show</button>
        	</a>        	
        </td>
        
        <td>
        	<a href = "<%= url_for edit_partdetail_path(item) %>">
        	<button type="button" class="btn btn-edit">Edit</button>
        	</a>        	
        </td>
        
        <td>
        	<a href = "<%= url_for item  %>" data-confirm="Are you sure?" data-method="delete" rel="nofollow">
        	<button type="button" class="btn btn-destroy">Destroy</button>
        	</a>        	
        </td>
                         
  
    </tr>

    <% end %>
  </tbody>
</table>

</div>


<script>
	$(document).ready(function() {
    $('#maintable').dataTable();
} );

</script>
